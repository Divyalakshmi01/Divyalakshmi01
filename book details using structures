#include<stdio.h>
int main()
{
    struct book
    {
        int bid;
        char bname[30];
        int bprice;
        char bauthor[30];
    };
    struct book b1;
    printf("enter the bid");
    scanf("%d",b1.bid);
    printf("enter the bname");
    scanf(" %[^\n]",b1.bname);
    printf("\n enter the bprice");
    scanf(" %d",&b1.bprice);
    printf("\n enter the bauthor");
    scanf(" %[^\n]",b1.bauthor);
    printf("\n %d %s %s %d",b1.bid,b1.bname,b1.bprice,b1.bauthor);
    return 0;
}
